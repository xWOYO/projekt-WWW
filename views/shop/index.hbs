{{# each products }}
    <div class="row">
        {{#each this}}
            <div class="col-sm-6 col-md-4 thumbSize">
                <div class="img-thumbnail">
                    <img src="{{this.imagePath}}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{this.title}}</h3>
                        <p class="description">{{this.description}}</p>
                        <div class="clearfix">
                            <div class="price float-start">${{this.price}}</div>
                            <a href="/addtocart/{{this._id}}" class="btn btn-success float-end">Add to cart</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}
