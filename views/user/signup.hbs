<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>Sign Up</h1>
        <form action="/user/signup" method="post">
            <divclass="form-group">
                <label for="email">E-Mail</label>
                <input type="text" id="email" name="email" class="form-control" style="width: 380px;">
            </div>
            <divclass="form-group">
                <label for="password">password</label>
                <input type="password" id="password" name="password" class="form-control" style="width: 380px;">
            </div>
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Sign Up</button>
        </form>
    </div>
</div>